extends ../dashboard.pug

block content
  form.text-center.border.border-light.p-5
    p.h4.mb-4 USUARIO
    // Name
    input#defaultContactFormName.form-control.mb-4(type='text', name= "name", placeholder='Nombre')
    // LastName
    input#defaultContactFormName.form-control.mb-4(type='text', name= "lastName", placeholder='Apellidos')
    // Dni
    input#defaultContactFormName.form-control.mb-4(type='number', name= "dni", placeholder='DNI')
    // Email
    input#defaultContactFormEmail.form-control.mb-4(type='email', placeholder='E-mail')
    //Password
    input#defaultContactFormName.form-control.mb-4(type='password', name= "password", placeholder='Contraseña')
    // Tipo de Usuario
    select.browser-default.custom-select.mb-4(name= "role")
      option(value='', disabled='', selected='') Elija Opción
      option(value='administrator') Administrador
      option(value='teacher') Docente
    
    // Send button
    button.btn.btn-info.btn-block(type='submit') Guardar
