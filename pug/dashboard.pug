<!DOCTYPE html>
html(lang="es")
  head
    include partials/headDashboard.pug
    block styles 
  body.grey.lighten-3
    header
      // Navbar
      nav.navbar.fixed-top.navbar-expand-lg.navbar-light.white.scrolling-navbar
        .container-fluid
          // Brand
          a.navbar-brand.waves-effect(href='/html/usuarios/listado.html')
            strong.blue-text EPICI
          // Collapse
          button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navBarMenu' aria-controls='navBarMenu' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          // Links
          #navBarMenu.collapse.navbar-collapse
            // Left 
            ul.navbar-nav.mr-auto
              li.nav-item
                a.nav-link.waves-effect(href='/html/usuarios/listado.html')
                  | Usuario
              li.nav-item
                a.nav-link.waves-effect(href='/html/cursos/listado.html')
                  | Cursos 
              li.nav-item
                a.nav-link.waves-effect(href='/html/horarios/listado.html')
                  | Horarios 
                  
            // Right
            ul.navbar-nav.nav-flex-icons
              li.textNombreUsuario.nav-item
              li.nav-item
                a#salir.waves-effect.btn.btn-info(href='#' target='_blank')
                 | SALIR 
              
      // Navbar
      // Sidebar
      .sidebar-fixed.position-fixed
        a.anchoLogo
          img(src='/img/EPICI.png' alt='')
        .list-group.list-group-flush
          a.list-group-item.list-group-item-action.waves-effect(href='/html/usuarios/listado.html')
            i.fas.fa-user.mr-3
            | Usuarios
          a.list-group-item.list-group-item-action.waves-effect(href='/html/cursos/listado.html')
            i.fas.fa-book.mr-3
            | Cursos
          a.list-group-item.list-group-item-action.waves-effect(href='/html/cursos/horarios.html')
            i.fas.fa-calendar-alt.mr-3
            | Horarios


    main.pt-5.mx-lg-5
      .container-fluid.mt-5
        block content

    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js')
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js')
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.2/js/mdb.min.js')
    script(src="/js/app-dist.js")
    block scripts